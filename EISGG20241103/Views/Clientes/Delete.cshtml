@model EISGG20241103.Models.Cliente

@{
    ViewData["Title"] = "Eliminar";
}

<div class="row">
    <div class="card">
        <div class="card-header row">
            <h1 class="card-text">Eliminar cliente</h1>
        </div>
        <div class="card-body row">
            <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Apellido)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Apellido)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Edad)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Edad)
        </dd>
    </dl>
    <div class="col-md-12" style="margin-top:10px;">
        @await Html.PartialAsync("_DetalleClientes", Model.DetalleClientes)
    </div>
            <form asp-action="Delete" class="row col-md-12">
                <input type="hidden" asp-for="Id" />
                <div class="col-md-6" style="margin-top:10px;">
                    <input style="width:100%;" type="submit" value="Eliminar" class="btn btn-danger" />
                </div>
                <div class="col-md-6" style="margin-top:10px;">
                    <a style="width:100%;" class="btn btn-secondary" asp-action="Index">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>